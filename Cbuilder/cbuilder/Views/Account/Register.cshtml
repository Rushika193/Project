@using Cbuilder.Core.Models.AccountViewModels
@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
<div class="row">
    <div class="container">
        <div class="login-outer register">
            <div class="sfContainer flex">

                <div class="login-wrap">


                    <h1>@ViewData["Title"]</h1>



                    <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                        <div class="sfFormwrapper register">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="sfFieldset">
                                <div class="sfFormkey">

                                    <input asp-for="Email" class="sfInputbox " />
                                    <label asp-for="Email"></label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="sfFieldset">
                                <div class="sfFormkey">

                                    <input asp-for="Password" class="sfInputbox " />
                                    <label asp-for="Password"></label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="sfFieldset">
                                <div class="sfFormkey">

                                    <input asp-for="ConfirmPassword" class="sfInputbox" />
                                    <label asp-for="ConfirmPassword"></label>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="sfButtonwrapper">
                                <button type="submit" class="sfBtn primary btn-full">Register</button>
                                
                            </div>


                        </div>
                    </form>
                    <div class="form-group footer-login">
                        <p>
                            Already registered?
                            <a asp-area="" asp-controller="Account" class="My-3x link" asp-action="Login">Login</a>
                        </p>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
