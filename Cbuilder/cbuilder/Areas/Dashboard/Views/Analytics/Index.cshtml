</section>


<div class="sfRow">
    <div class="sfCol-12 sfCol-md-8 charts Mb-40">
        <div class="card">
            <div class="card-body Pa-30">
                <div class="flex Mb-30 p-relative">
                    <h5 class="fw-400">Users</h5>

                    <div class="chart-date-filter  dropdown-group  ml-auto" id="divMainUserChart">

                        <div class="list-dropdown">
                            <button class="btn chartfilter dropdown-link">
                                <i class="fa fa-calendar Ml-0 Mr-5"></i>
                                <span id="spanCurrentUserDateView">July 24 - July 31</span>
                            </button>
                        </div>
                        <ul class="list-group" id="ulCurrentUserFilter">
                            <li class=" group-item group-item-link-bg ">
                                <span aid="today" class="clscurrentuser spanDateFilterToday">Today</span>
                            </li>
                            <li class=" group-item group-item-link-bg">
                                <span aid="yesterday" class="clscurrentuser spanDateFilterYesterday">Yesterday</span>
                            </li>
                            <li class=" group-item group-item-link-bg">
                                <span aid="last7" class="clscurrentuser spanDateFilterLast7">Last 7 days</span>
                            </li>
                            <li class=" group-item group-item-link-bg">
                                <span aid="last30" class="clscurrentuser spanDateFilterLast30">Last 30 days</span>
                            </li>
                            <li class=" group-item group-item-link-bg">
                                <span aid="custom" class="clscurrentuser spanDateFilterCustom">Custom</span>
                            </li>
                        </ul>
